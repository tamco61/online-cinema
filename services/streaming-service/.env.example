# Service
SERVICE_NAME=streaming-service
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8005
DEBUG=false

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=streaming_service
POSTGRES_PASSWORD=streaming_password
POSTGRES_DB=streaming_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=3
REDIS_PASSWORD=
REDIS_PROGRESS_TTL=86400
REDIS_SUBSCRIPTION_CACHE_TTL=300

# S3/MinIO
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=vod
S3_REGION=us-east-1
S3_USE_SSL=false
SIGNED_URL_EXPIRATION=3600

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_PREFIX=stream
ENABLE_KAFKA=true

# User Service Integration
USER_SERVICE_URL=http://user-service:8002
USER_SERVICE_TIMEOUT=5

# JWT (must match auth-service)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Progress Sync
PROGRESS_SYNC_INTERVAL=60
