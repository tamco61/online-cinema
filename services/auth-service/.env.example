# Service Configuration
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8001
RELOAD=true
WORKERS=1

# Logging
LOG_LEVEL=INFO
JSON_LOGS=true

# Database Configuration (PostgreSQL)
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=auth_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security & JWT
# IMPORTANT: Change this secret key in production!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8

# OAuth2 Configuration (Google)
# Set these if you want to enable OAuth
ENABLE_OAUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/auth/oauth/google/callback

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
LOGIN_RATE_LIMIT_PER_MINUTE=5
LOGIN_RATE_LIMIT_PER_HOUR=20

# Feature Flags
ENABLE_API_DOCS=true

# Observability (Optional - for production)
JAEGER_HOST=localhost
JAEGER_PORT=6831
ENABLE_METRICS=true
ENABLE_TRACING=false
