# Service Configuration
SERVICE_NAME=notification-service
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8008
DEBUG=False

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=notification-service
KAFKA_AUTO_OFFSET_RESET=earliest
ENABLE_KAFKA=True

# Kafka Topics
KAFKA_TOPIC_USER_EVENTS=user.events
KAFKA_TOPIC_CATALOG_EVENTS=catalog.events
KAFKA_TOPIC_RECOMMENDATION_EVENTS=recommendation.events

# Email Provider (sendgrid, aws_ses, console)
EMAIL_PROVIDER=console
EMAIL_FROM_ADDRESS=noreply@cinema.example.com
EMAIL_FROM_NAME=Online Cinema

# SendGrid
SENDGRID_API_KEY=

# AWS SES
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Push Provider (fcm, console)
PUSH_PROVIDER=console

# Firebase Cloud Messaging
FCM_SERVER_KEY=
FCM_PROJECT_ID=
FCM_CREDENTIALS_PATH=

# User Service Integration
USER_SERVICE_URL=http://localhost:8002
USER_SERVICE_API_KEY=

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_PUSH_NOTIFICATIONS=True
MAX_RETRY_ATTEMPTS=3
